<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject unless express_ticket %>
    <%= f.input :content %>
    <% unless express_ticket %>
      <%= f.input :status, collection: select('status') %>
      <%= f.input :priority, collection: select('priority') %>
      <%= f.input :user_id %>
    <% end %>
    <%= f.input :assignee_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>