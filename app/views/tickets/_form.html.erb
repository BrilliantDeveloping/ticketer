<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject, 
        as: express_ticket? %>
    
    <%= f.input :content %>
    
    <%= f.input :status, 
        collection: select('status'), 
        as: express_ticket? %>
    
    <%= f.input :priority, 
        collection: select('priority'), 
        as: express_ticket? %>
    
    <%= f.input :assignee_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>